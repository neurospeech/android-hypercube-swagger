{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Sample Swagger API"
  },
  "paths": {
    "/persons": {
      "get": {
        "description": "Gets `Person` objects.\nOptional query param of **size** determines\nsize of returned array\n",
        "parameters": [
          {
            "name": "size",
            "in": "query",
            "description": "Size of array",
            "required": true,
            "type": "number",
            "format": "double"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "schema": {
              "title": "ArrayOfPersons",
              "type": "array",
              "items": {
                "title": "Person",
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "single": {
                    "type": "boolean"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/save": {
      "post": {
        "description": "Save Person",
        "parameters": [
          {
            "name": "Name",
            "in": "formData",
            "description": "Name of the person",
            "required": true,
            "type": "string"
          },
          {
            "name": "Email",
            "in": "formData",
            "description": "Email of the person",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  }
}